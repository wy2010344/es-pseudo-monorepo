{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint:check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "publish-packages": {
      "dependsOn": ["build", "lint", "type-check", "test"],
      "cache": false
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "docs": {
      "dependsOn": ["build"],
      "outputs": ["docs/**"],
      "cache": true
    },
    "format:check": {
      "outputs": []
    }
  },
  "globalEnv": ["NODE_ENV", "CI"],
  "globalPassThroughEnv": ["npm_config_registry"]
}
