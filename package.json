{
  "name": "pseudo-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:check": "turbo run lint:check",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "docs": "repo-generate-docs && turbo run docs",
    "docs:serve": "cd docs && python -m http.server 8080",
    "publish-packages": "turbo run publish-packages --filter='./packages/*'",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run build && pnpm run publish-packages",
    "prepare": "husky install",
    "dev-setup": "repo-dev-setup",
    "setup-hooks": "repo-setup-hooks",
    "setup-configs": "repo-setup-configs",
    "commit": "cz"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.16.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "turbo": "^2.5.8",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.2.10",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
