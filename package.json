{
  "name": "pseudo-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:check": "turbo run lint:check",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "publish-packages": "turbo run publish-packages --filter='./packages/*'",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run build && pnpm run publish-packages",
    "release-selected": "pnpm run build-selected && pnpm run publish-selected",
    "build-selected": "turbo run build --filter='better-react' --filter='better-react-helper' --filter='better-react-dom' --filter='better-react-dom-helper' --filter='wy-react-helper' --filter='wy-react-dom-helper'",
    "publish-selected": "turbo run publish-packages --filter='better-react' --filter='better-react-helper' --filter='better-react-dom' --filter='better-react-dom-helper' --filter='wy-react-helper' --filter='wy-react-dom-helper'",
    "publish-selected-direct": "npm publish --workspace=packages/better-react/core && npm publish --workspace=packages/better-react/helper && npm publish --workspace=packages/better-react/dom && npm publish --workspace=packages/better-react/dom-helper && npm publish --workspace=packages/wy-react-helper/base && npm publish --workspace=packages/wy-react-helper/dom",
    "prepare": "husky install",
    "commit": "cz"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.16.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "turbo": "^2.5.8",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
